@model KuaforDbSistemi.Models.Randevu

<h2>Randevuyu Sil</h2>
<p>Bu randevuyu silmek istediðinize emin misiniz?</p>
<dl class="row">
    <dt class="col-sm-3">Müþteri Adý</dt>
    <dd class="col-sm-9">@Model.MusteriAd</dd>
    <dt class="col-sm-3">Müþteri Soyadý</dt>
    <dd class="col-sm-9">@Model.MusteriSoyad</dd>
