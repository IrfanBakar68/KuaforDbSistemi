@model KuaforDbSistemi.Models.Randevu

<div class="container mt-5">
    <h2>Yeni Randevu Oluþtur</h2>
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label>Müþteri Adý</label>
            <input asp-for="MusteriAd" class="form-control" />
            <span asp-validation-for="MusteriAd" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Müþteri Soyadý</label>
            <input asp-for="MusteriSoyad" class="form-control" />
            <span asp-validation-for="MusteriSoyad" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Tarih</label>
            <input asp-for="Tarih" type="datetime-local" class="form-control" />
            <span asp-validation-for="Tarih" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Salon</label>
            <select asp-for="SalonId" class="form-control" asp-items="ViewBag.SalonId"></select>
            <span asp-validation-for="SalonId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Çalýþan</label>
            <select asp-for="CalisanId" class="form-control" asp-items="ViewBag.CalisanId"></select>
            <span asp-validation-for="CalisanId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Ýþlem</label>
            <select asp-for="IslemId" class="form-control" asp-items="ViewBag.IslemId"></select>
            <span asp-validation-for="IslemId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Durum</label>
            <select asp-for="Durum" class="form-control" asp-items="ViewBag.Durum"></select>
            <span asp-validation-for="Durum" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Kaydet</button>
        <a asp-action="Index" class="btn btn-secondary mt-3">Geri</a>
    </form>
</div>
