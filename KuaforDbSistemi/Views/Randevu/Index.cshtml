@model IEnumerable<KuaforDbSistemi.Models.Randevu>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Randevu Listesi</h2>
        <a asp-action="Create" class="btn btn-primary">Randevu Ekle</a>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Müþteri Adý</th>
                <th>Soyadý</th>
                <th>Tarih</th>
                <th>Durum</th>
                <th>Ýþlemler</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MusteriAd</td>
                        <td>@item.MusteriSoyad</td>
                        <td>@item.Tarih.ToString("g")</td>
                        <td>@item.Durum</td>
                        <td>
                            <div class="btn-group">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detaylar</a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center text-muted">Henüz bir randevu kaydý yok.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
